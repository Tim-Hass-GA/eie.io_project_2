<h2>Create Section Note</h2>
<form class="create-note" name="noteCreate" action="/note/new" method="post">

<!-- for the garden -->
<fieldset>
  <div class="note">
    <input type="hidden" class="form-control" name="user_id" value="<%= currentUser.id %>">
    <input type="hidden" class="form-control" name="section_id" value="<%= section.id %>">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="noteTitle">Title</label>
        <div class="col-sm-10">
          <input id="noteTitle" type="text" name="title" placeholder="Note Title" aria-label="Note Title" required autofocus>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="gardenDescription">Details</label>
        <div class="col-sm-10">
          <textarea class="form-control" name="details" aria-label="details" required></textarea>
        </div>
      </div>
  </div>
</fieldset>
<hr>
  <a class="btn btn-primary" role="button" href="/">Home</a>
  <!-- <a class="btn btn-info" role="button" href="/garden/show/<%= currentUser.id %>">Garden Section</a> -->
  <input class="btn btn-success" type="submit">
</form>
