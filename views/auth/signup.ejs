<form action="/auth/signup" method="POST">
  <div class="form-group">
    <label for="authEmail">Email</label>
    <input type="email" class="form-control" id="authEmail" aria-describedby="emailHelp" name="email" placeholder="Enter email" required autofocus>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="form-group">
    <label for="authFirstName">First Name</label>
    <input id="authFirstName" class="form-control" type="text" name="first_name" placeholder="Enter your first name." required>
  </div>

  <div class="form-group">
    <label for="authLastName">Last Name</label>
    <input id="authLastName" class="form-control" type="text" name="last_name" placeholder="Enter your last name." required>
  </div>

  <div class="form-group">
    <label for="authPassword">Password</label>
    <input id="authPassword" class="form-control" type="password" name="password" placeholder="Password must 8+ characters." required>
  </div>

  <!-- <div class="form-group">
    <label for="authBio">Your Bio (optional)</label>
    <input id="authBio" class="form-control" type="text" name="bio" placeholder="Let us know about you.">
  </div> -->

  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">Bio</span>
    </div>
    <textarea class="form-control" name="bio" aria-label="Your bio"></textarea>
  </div>

  <input class="btn btn-primary" type="submit">
  <a class="btn btn-info" role="button" href="/">Cancel</a>
</form>
