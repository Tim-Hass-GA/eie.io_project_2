<form action="/auth/login" method="POST">
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="authEmail">Email</label>
    <div class="col-sm-10">
      <input id="authEmail" class="form-control" type="email" name="email" required autofocus>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="authPassword">Password</label>
    <div class="col-sm-10">
      <input id="authPassword" class="form-control" type="password" name="password" required>
    </div>
  </div>
  <hr>

  <input class="btn btn-primary" type="submit">
  <a class="btn btn-info"  href="/">Cancel</a>
</form>
