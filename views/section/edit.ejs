<h3>Edit Garden Section</h3>

<div class="gardenSection">
  <form class="update-section" name="gardenSectionUpdate" action="/section/update/<%= section.id %>" method="post">
    <input type="hidden" class="form-control" name="userId" value="<%= currentUser.id %>">
    <input type="hidden" class="form-control" name="gardenId" value="<%= section.gardenId %>">

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="sectionName">Section Name</label>
      <div class="col-sm-1">
        <input id="sectionName" type="text" name="name" placeholder="Name of this garden" value="<%= section.name %>" tabindex="1" required autofocus>
      </div>
    </div>

    <!-- <div class="form-group row">
      <label for="sectionDescription">Section Description</label>
      <div class="col-sm-10">
        <input id="sectionDescription" type="text" name="description" placeholder="Section description" value="<%= section.description %>" required>
      </div>
    </div> -->

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="numOfRows">Number of Rows</label>
      <div class="col-sm-10">
        <input id="numOfRows" type="number" name="number_of_rows" placeholder="How many rows are in this section of the garden" value="<%= section.number_of_rows %>" tabindex="2" required>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="numOfItems">Number of Items</label>
      <div class="col-sm-10">
        <input id="numOfItems" type="number" name="number_of_items" placeholder="How many items in each row in this section" value="<%= section.item_count %>" tabindex="3" required>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="datePlanted">Date Planted</label>
      <div class="col-sm-10">
        <input id="datePlanted" type="date" name="date_planted" placeholder="What date did you plant this section" value="<%= section.date_planted %>" tabindex="4" required>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="description">Section Description</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="description" aria-label="Section Description" tabindex="5" required><%= section.description %></textarea>
      </div>
    </div>
    <input class="btn btn-success" type="submit">
  </form>
</div>

<div class="gardenSectionNotes">
  <h3>Garden Section Crop Notes</h3>
  <p>Here are where notes go.</p>
</div>
<a class="btn btn-primary" role="button" href="/">Home</a>
<a class="btn btn-success active" role="button" href="/garden/show/<%=currentUser.id %>">Show Gardens</a>
