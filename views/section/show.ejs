    <h3>Garden Section</h3>

    <div class="gardenSection">
      <% if (section){ %>
           <ul class="list-group">
             <li class="list-group-item list-group-item-primary">Name: <%= section.name %></li>
             <li class="list-group-item">Description: <%= section.description %></li>
             <li class="list-group-item">Rows: <%= section.number_of_rows %></li>
             <li class="list-group-item">Number of plants: <%= section.item_count %></li>
             <li class="list-group-item">Planted on: <%= section.date_planted %></li>
           </ul>
      <% } %>

    </div>
    <!-- for the garden section and crop -->
    <div class="gardenCropInfo">
      <h3>Crop Information</h3>
      <% if (crop){ %>
            <ul class="list-group">
              <!-- <li class="list-group-item">Crop ID: <%= crop.id %></li> -->
              <li class="list-group-item list-group-item-primary">
                Crop: <%= crop.name %>
                 | Wikipedia: <a href="<%= crop.en_wikipedia_url %>" target="_blank" > <%= crop.name %> </a></li>
              <li class="list-group-item list-group-item">Is Perennial: <%= crop.perennial %></li>

              <% if (crop.median_lifespan !== null) { %>
                <li class="list-group-item list-group-item">Lifespan: <%= crop.median_lifespan %> Days</li>
              <% } else { %>
                <li class="list-group-item list-group-item">No Data for crop lifespan</li>
              <% } %>

              <% if (crop.median_days_to_first_harvest !== null) { %>
                <li class="list-group-item list-group-item">Days to first harvest: <%= crop.median_days_to_first_harvest %> Days</li>
              <% } else { %>
                <li class="list-group-item list-group-item">No Data for days to first harvest</li>
              <% } %>

              <% if (crop.median_days_to_last_harvest !== null) { %>
                <li class="list-group-item list-group-item">Days to last harvest: <%= crop.median_days_to_last_harvest %> Days</li>
              <% } else { %>
                <li class="list-group-item list-group-item">No Data for days to last harvest</li>
              <% } %>
            </ul>
        </div>
      <% } else { %>
        <p>Unable to find crops</p>
      <% } %>

      <div class="gardenSectionNotes">
        <% if (section.notes) { %>
          <h3>Section Notes</h3>
            <% section.notes.forEach(function(note){  %>
              <ul class="list-group">
                <li class="list-group-item"><%= note.title %> - <%= note.details %></li>
                <li class="list-group-item">Created: <%= note.createdAt %></li>
                <li class="list-group-item">Last update: <%= note.updatedAt %></li>
              </ul>
            <% }); %>
        <% } %>
      </div>

