<h2>Edit Profile</h2>

<div class="update">
  <form class="update-user" name="userUpdate" action="/user/update/<%= user.id %>" method="post">

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="userEmail">Email</label>
      <div class="col-sm-10">
        <input id="userEmail" type="email" name="email" value="<%= user.email %>" required>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="userFirstName">First Name</label>
      <div class="col-sm-10">
        <input id="userFirstName" type="text" name="first_name" value="<%= user.first_name %>" required>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="userLastName">Last Name</label>
      <div class="col-sm-10">
        <input id="userLastName" type="text" name="last_name" value="<%= user.last_name %>" required>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="userBio">Bio</label>
      <div class="col-sm-10">
        <!-- <input id="userBio" type="text" name="bio" value="<%= user.bio %>"> -->
        <textarea id="userBio" name="bio" class="form-control"><%= user.bio %></textarea>
      </div>
    </div>

    <a class="btn btn-info" role="button" href="/user/profile">Back to profile</a>
    <input class="btn btn-primary" type="submit">
  </form>
</div>
